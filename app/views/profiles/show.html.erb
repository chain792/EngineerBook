<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1><%= t('.title') %></h1>
      <div class="d-flex">
        <%= image_tag current_user.avatar.url, size: '60x60', class: 'ms-3 me-3 rounded-circle' %>
        <div class="flex-fill">
          <table class="table table-borderless">
            <tr>
              <td><%= User.human_attribute_name('email') %>:</th>
              <td><%= current_user.email %></td>
            </tr>
            <tr>
              <td><%= User.human_attribute_name('name') %>:</th>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <td>参加日:</th>
              <td><%= date(current_user.created_at) %></td>
            </tr>
          </table>
        </div>
      </div>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
