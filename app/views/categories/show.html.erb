<% content_for(:title, @category.name) %>
<div class="container pt-3">
  <p class="mb-2">
    <small class="text-muted">
      <% @category.path.each_with_index do |category, index| %>
        <%= link_to category.name, category_path(category), class: 'link-secondary' %>
        <%= ' › ' unless index == @category.path.length - 1 %>
      <% end %>
    </small>
  </p>
  <h1 class="mb-3"><%= @category.name %></h1>
  <!-- 投稿一覧 -->
  <div class="row">
    <% if @books.present? %>
      <% @books.each do |book| %>
        <div class="col-lg-4 col-md-6 col-12">
          <%= render 'books/book', book: book %>
        </div>
      <% end %>
    <% else %>
      <p class="mt-3 text-secondary"><%= t('.no_result') %></p>
    <% end %>
  </div>
</div>