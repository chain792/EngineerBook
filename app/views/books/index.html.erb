<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <h1 class="mb-3"><%= t('.title') %></h1>
  <!-- 投稿一覧 -->
  <div class="row">
    <% if @books.present? %>
      <% @books.each do |book| %>
        <div class="col-lg-4 col-md-6 col-12">
          <%= render 'books/book', book: book %>
        </div>
      <% end %>
    <% else %>
      <p class="mt-3 text-secondary"><%= t('.no_result') %></p>
    <% end %>
  </div>
</div>

