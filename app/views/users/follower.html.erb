<% content_for(:title, t('.title')) %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <% @users.each do |user| %>
        <div class="bg-white border rounded-2 p-3 mb-1 position-relative">
          <div class="d-flex align-items-center">
            <%= image_tag user.avatar.url, size: '60x60', class: 'ms-3 me-3 rounded-circle' %>
            <h3><%= user.name %></h3>
            <%= render 'relationships/follow_button', user: user %>
          </div>
          <div class="pt-3">
            <p class="border-bottom fs-7 fw-bolder mb-2">自己紹介</p>
            <p class="">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad eligendi doloremque, quam, officia sapiente porro sit perferendis voluptatibus adipisci voluptate maiores pariatur quidem neque odio praesentium error quasi mollitia libero!</p>
          </div>
          <%= link_to '', user_path(user), class: 'card-link' %>
        </div>
      <% end %>
    </div>
  </div>
</div>