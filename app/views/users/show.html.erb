<% content_for(:title, @user.name + 'さん') %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-xl-8 offset-xl-2">
      <div class="bg-white border rounded-2 p-3">
        <div class="d-flex align-items-center">
          <%= image_tag @user.avatar.url, size: '60x60', class: 'ms-3 me-3 rounded-circle' %>
          <h3><%= @user.name %></h3>
          <%= render 'relationships/follow_button', user: @user %>
        </div>
        <div class="pt-3">
          <p class="border-bottom fs-7 fw-bolder mb-2">自己紹介</p>
          <p class="">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad eligendi doloremque, quam, officia sapiente porro sit perferendis voluptatibus adipisci voluptate maiores pariatur quidem neque odio praesentium error quasi mollitia libero!</p>
        </div>
        <div class="d-flex">
          <p class="me-3 mb-0" id="follow-count"><%= @user.followings.length %><small class="text-secondary"> フォロー中</small></p>
          <p class="mb-0" id="follower-count"><%= @user.followers.length %><small class="text-secondary"> フォロワー</small></p>
        </div>
      </div>
      <div class="bg-white border rounded-2 px-4 mt-3">
        <p class="pt-3 fw-bolder">レビュー履歴</p>
      </div>
      <!-- 投稿一覧 -->
      <div class="row mt-3">
        <% @books.each do |book| %>
          <div class="col-lg-6 col-12">
            <%= render 'books/book', book: book %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>